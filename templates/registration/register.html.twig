

{% block body %}
    <div class="container">
        <h1 class="h3 mb-3 font-weight-normal">Create Account</h1>

        {{ form_start(registrationForm) }}
            <div class="mb-3">
                {{ form_label(registrationForm.email, 'Email', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(registrationForm.email, {'attr': {
                    'class': 'form-control',
                    'placeholder': 'Enter your email',
                    'autocomplete': 'email'
                }}) }}
            </div>

            <div class="mb-3">
                {{ form_label(registrationForm.plainPassword, 'Password', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(registrationForm.plainPassword, {'attr': {
                    'class': 'form-control',
                    'placeholder': 'Create password',
                    'autocomplete': 'new-password'
                }}) }}
            </div>

            <div class="mb-3 form-check">
                {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'form-check-input'}}) }}
                {{ form_label(registrationForm.agreeTerms, 'I agree to the terms', {'label_attr': {'class': 'form-check-label'}}) }}
            </div>

            <button class="btn  btn-primary" type="submit">Register</button>
        {{ form_end(registrationForm) }}

        <div class="text-center mt-3">
            <p>Already have an account? <a href="{{ path('app_login') }}">Login here</a></p>
        </div>
    </div>
{% endblock %}

{% block stylesheets %}

  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
<style>
    :root {
        --primary-color: #4a90e2;
        --primary-hover: #357abd;
        --background-color: #f4f7fc;
        --card-bg: #ffffff;
        --text-color: #333333;
        --muted-text: #666666;
        --shadow-color: rgba(0, 0, 0, 0.1);
    }

    body {
        background-color: var(--background-color);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .container {
        max-width: 400px;
        margin-top: 100px;
        background-color: var(--card-bg);
        padding: 30px;
        border-radius: 12px;
        box-shadow: 0 8px 20px var(--shadow-color);
        animation: fadeIn 0.5s ease-in-out;
    }

    h1 {
        text-align: center;
        color: var(--text-color);
        margin-bottom: 30px;
        font-size: 28px;
        font-weight: 600;
    }

    label {
        font-weight: 600;
        color: var(--text-color);
    }

    .form-control {
        margin-bottom: 20px;
        border-radius: 6px;
        padding: 10px;
        border: 1px solid #ced4da;
    }

    .btn-primary {
        background-color: var(--primary-color);
        border: none;
        padding: 12px;
        border-radius: 6px;
        font-weight: 600;
        width: 100%;
        transition: background-color 0.3s ease;
    }

    .btn-primary:hover {
        background-color: var(--primary-hover);
    }

    .form-check-label {
        font-size: 14px;
        color: var(--muted-text);
    }

    .text-center a {
        color: var(--primary-color);
        text-decoration: none;
        font-weight: 500;
    }

    .text-center a:hover {
        text-decoration: underline;
    }

    @keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>

{% endblock %}