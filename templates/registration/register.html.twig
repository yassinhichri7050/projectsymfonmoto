{% block body %}
<div class="container">
    <h1 class="text-center mb-4">Create Account</h1>

    {{ form_start(registrationForm) }}
        <div class="mb-3">
            {{ form_label(registrationForm.email, 'Email') }}
            {{ form_widget(registrationForm.email, {
                'attr': {
                    'class': 'form-control',
                    'placeholder': 'Enter your email'
                }
            }) }}
        </div>

        <div class="mb-3">
            {{ form_label(registrationForm.plainPassword, 'Password') }}
            {{ form_widget(registrationForm.plainPassword, {
                'attr': {
                    'class': 'form-control',
                    'placeholder': 'Create password'
                }
            }) }}
        </div>

        <div class="form-check mb-3">
            {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'form-check-input'}}) }}
            {{ form_label(registrationForm.agreeTerms, 'I agree to the terms', {'label_attr': {'class': 'form-check-label'}}) }}
        </div>

        <button type="submit" class="btn btn-custom w-100">Register</button>
    {{ form_end(registrationForm) }}

    <div class="text-center mt-3">
        <p>Already have an account? <a href="{{ path('app_login') }}">Login here</a></p>
    </div>
</div>
{% endblock %}

{% block stylesheets %}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<style>
    body {
        background-image: url('/img/kawasaki-ninja-h2-new.jpg');
        background-size: cover;
        background-repeat: no-repeat;
        background-attachment: fixed;
        background-position: center;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        padding-top: 60px;
    }

    .container {
        max-width: 420px;
        background: rgba(255, 255, 255, 0.1); /* Formulaire presque totalement transparent */
        backdrop-filter: blur(10px); /* Effet flou fort */
        padding: 30px;
        border-radius: 12px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3); /* Ombre douce */
        animation: fadeIn 0.5s ease-in-out;
    }

    h1 {
        color: #ffd700; /* Texte en or */
        font-weight: 700;
    }

    label {
        font-weight: 500;
        color: #ffd700; /* Labels en or */
    }

    .form-control {
        padding: 12px;
        border-radius: 6px;
        border: 1px solid #ced4da;
    }

    .form-control::placeholder {
        color: #aaa;
    }

    .btn-custom {
        background-color: #6c757d; /* Couleur gris */
        border: none;
        font-weight: 600;
    }

    .btn-custom:hover {
        background-color: #5a6268; /* Gris plus fonc√© au survol */
    }

    .text-center a {
        color: #ffd700; /* Lien en or */
        text-decoration: none;
    }

    .text-center a:hover {
        text-decoration: underline;
    }

    @keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>
{% endblock %}
